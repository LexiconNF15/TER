            @if ((User.IsInRole("Administrator")) || (User.IsInRole("GroupAdmin")) || (User.IsInRole("Assistant")))
            {
                <td>
                    @Html.DisplayFor(modelItem => item.Comment)
                </td>
            }

            @if (ViewBag.ActiveUser == item.ApplicationUserId)
            {
                <td>
                    @if (item.StatusType.StatusName == "Ny")
                    {
                        if (User.IsInRole("Assistant"))
                        {
                            @Html.ActionLink("Gör klar", "Calc", new { id = item.TravelReportId }, new { @class = "btn btn-sm btn-primary" })
                            @Html.ActionLink("Radera", "Delete", new { id = item.TravelReportId }, new { @class = "btn btn-sm btn-warning" })
                        }
                        else
                        {
                            @Html.ActionLink("Gör klar", "Calc", new { id = item.TravelReportId, selectedUserId = Model.SelectionList.SelectedTravelUser }, new { @class = "btn btn-sm btn-primary" })
                            @Html.ActionLink("Radera", "Delete", new { id = item.TravelReportId, selectedUserId = Model.SelectionList.SelectedTravelUser }, new { @class = "btn btn-sm btn-warning" })
                        }
                    }
                    else
                    {

                        if (item.StatusType.StatusName == "Ej godkänd")
                        {
                            if (User.IsInRole("Assistant"))
                            {
                                @Html.ActionLink("Gör klar", "Calc", new { id = item.TravelReportId }, new { @class = "btn btn-sm btn-primary" })
                            }
                            else
                            {
                                @Html.ActionLink("Gör klar", "Calc", new { id = item.TravelReportId, selectedUserId = Model.SelectionList.SelectedTravelUser }, new { @class = "btn btn-sm btn-primary" })

                            }

                        }
                        else
                        {
                            if (User.IsInRole("Assistant"))
                            {
                                @Html.ActionLink("Visa", "Details", new { id = item.TravelReportId }, new { @class = "btn btn-xs btn-primary" })
                            }
                            else
                            {
                                @Html.ActionLink("Visa", "Details", new { id = item.TravelReportId, selectedUserId = Model.SelectionList.SelectedTravelUser }, new { @class = "btn btn-xs btn-primary" })
                            }
                        }
                    }
                </td>
            }
            else // not own Travel Report
            {
                <td>

                    @if (User.IsInRole("GroupAdmin"))
                    {
                        if (item.StatusType.StatusName == "Inskickad")
                        {
                            @Html.ActionLink("Granska", "Calc", new { id = item.TravelReportId, selectedUserId = Model.SelectionList.SelectedTravelUser }, new { @class = "btn btn-sm btn-primary" })
                        }
                        else
                        {
                            @Html.ActionLink("Visa", "Details", new { id = item.TravelReportId, selectedUserId = Model.SelectionList.SelectedTravelUser }, new { @class = "btn btn-sm btn-primary" })
                        }
                    }
                    else
                    {
                        if (User.IsInRole("Administrator"))
                        {
                            if (item.StatusType.StatusName == "Ny" || item.StatusType.StatusName == "Ej godkänd" || item.StatusType.StatusName == "Verifierad")
                            {
                                @Html.ActionLink("Visa", "Details", new { id = item.TravelReportId, selectedUserId = Model.SelectionList.SelectedTravelUser }, new { @class = "btn btn-sm btn-primary" })
                            }
                            else
                            {
                                @Html.ActionLink("Granska", "Calc", new { id = item.TravelReportId, selectedUserId = Model.SelectionList.SelectedTravelUser }, new { @class = "btn btn-sm btn-primary" })
                            }
                        }
                        else // Patient or Other
                        {
                            @Html.ActionLink("Visa", "Details", new { id = item.TravelReportId }, new { @class = "btn btn-sm btn-primary" })
                        }
                    }
                </td>
            }

        </tr>
